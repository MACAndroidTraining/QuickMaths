<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/layout_padding"
        android:paddingBottom="@dimen/layout_padding"
        android:paddingRight="@dimen/layout_padding">

        <ImageView
            android:id="@+id/ivLogo"
            android:layout_width="@dimen/image_width"
            android:layout_height="match_parent"
            android:src="@drawable/walmart"
            android:contentDescription="Store Logo" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layout_margin"
            android:layout_marginRight="@dimen/layout_margin"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tvStoreName"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Walmart"
                android:textStyle="bold"
                android:textSize="@dimen/text_size_medium"
                android:maxLines="1"
                android:ellipsize="end"/>

            <TextView
                android:id="@+id/tvStoreDistance"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="3.4 miles"
                android:textStyle="italic"
                android:textSize="@dimen/text_size_medium"/>
        </LinearLayout>

        <!--<View-->
            <!--android:layout_width="0dp"-->
            <!--android:layout_height="match_parent"-->
            <!--android:layout_weight="1" />-->

        <TextView
            android:id="@+id/tvDollarSign"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="top"
            android:text="$"
            android:paddingTop="14dp"
            android:textSize="@dimen/text_size_small"/>

        <TextView
            android:id="@+id/tvPriceDollars"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="top"
            android:text="22"
            android:textSize="@dimen/text_size_large"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tvPrinceCents"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="top"
            android:paddingTop="12dp"
            android:text="00"
            android:textSize="@dimen/text_size_small"/>

    </LinearLayout>

</android.support.v7.widget.CardView>

